<% if user_signed_in? %>

  <table id="friends" class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="table-dark">
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User_Id</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user%>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>

          <td>
            <%= friend.email %>
          </td>

          <td>
            <%= friend.phone %>
          </td>

          <td>
            <%= friend.twitter %>
          </td>

          <td>
            <%= friend.user_id %>
          </td>

          <td>
            <%= button_to "Delete", friend, method: :delete, class:"btn btn-outline-danger btn-sm"%>
          </td>

        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>

  <h1>Hello World!</h1>
  <p>This is my first Rails webpage...</p>

<% end %>