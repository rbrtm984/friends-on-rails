<table id="friends" class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User_Id</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td>
          <%= friend.first_name %>
        </td>

        <td>
          <%= friend.last_name %>
        </td>

        <td>
          <%= friend.email %>
        </td>

        <td>
          <%= friend.phone %>
        </td>

        <td>
          <%= friend.twitter %>
        </td>

        <td>
          <%= friend.user_id %>
        </td>

        <td>
          <%= link_to "Show", friend, class:"btn btn-dark" %>
        </td>

        <td>
          <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-secondary" %>
        </td>

        <td>
          <%= button_to "Remove", friend, method: :delete, class:"btn btn-warning"%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
